{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "outDir": "src/javascript/",
        "esModuleInterop": true,
        "strict": true
    },
    "include": ["src/typescript/**/*"],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}